        <servlet-name>CartServletController</servlet-name>
        <servlet-class>Controller.CartServletController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductToCart</servlet-name>
        <servlet-class>Controller.AddProductToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServletController</servlet-name>
        <servlet-class>Controller.CategoryServletController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerStoreServlet</servlet-name>
        <servlet-class>Controller.ManagerStoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateProductSerrvlet</servlet-name>
        <url-pattern>/CreateProductSerrvlet</url-pattern>
