        <init-param>
            <param-name>admin-password</param-name>
            <param-value>12345</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CreateProductSerrvlet</servlet-name>
        <servlet-class>Controller.CreateProductSerrvlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>Controller.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPassServlet</servlet-name>
        <servlet-class>Controller.ForgotPassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServletController</servlet-name>
        <servlet-class>Controller.HomeServletController</servlet-class>
